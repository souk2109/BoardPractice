<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
	<mapper namespace="org.example.mapper.ReplyMapper">
	
		<insert id="insert">
			insert into tbl_reply(bno,reply,replyer) values(#{bno},#{reply},#{replyer})
		</insert>
		
		<select id="get" resultType="org.example.domain.ReplyVO">
			<![CDATA[
					select * from tbl_reply where rno=#{rno}
			]]>
		</select>
		
		<delete id="remove">
			delete from tbl_reply where rno=#{rno}
		</delete>
		
		<update id="update">
			update tbl_reply 
			set reply = #{reply}, updatedate = current_timestamp 
			where rno = #{rno}
		</update>
		
		<select id="getListWithPaging" resultType="org.example.domain.ReplyVO">
			select * from tbl_reply where bno = #{bno} order by rno asc
		</select>
		
	</mapper>